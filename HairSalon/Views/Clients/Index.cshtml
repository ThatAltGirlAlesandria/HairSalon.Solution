@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<div>
  <h1>Clients:</h1>

  @if (@Model.Count == 0)
  {
    <h3>Currently, you have no clients in the database.</h3>
  }

    <ul>
      @foreach (Client client in Model)
      {
        <li>@Html.ActionLink($"{client.ClientName}", "Details", new {id = client.ClientId})</li>
      }
    </ul>
</div>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Clients", "Index", "Clients")</p>
<p>@Html.ActionLink("Stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Add Client", "Create")</p>
