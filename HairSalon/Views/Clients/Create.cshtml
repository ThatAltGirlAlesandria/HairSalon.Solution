@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

<p>As a reminder, you need to have at least one stylist added before you add a client.</p>
<p>If you haven't created a stylist yet, please vist @Html.ActionLink("this page", "Create", "Stylists") to add a stylist to the database.</p>

@using(Html.BeginForm())
{
  @Html.LabelFor(model => model.ClientName)
  @Html.TextBoxFor(model => model.ClientName)
  @Html.LabelFor(model => model.ClientDetails)
  @Html.TextBoxFor(model => model.ClientDetails)
  @Html.LabelFor(model=> model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new client" />
}

<p>@Html.ActionLink("Show all clients", "Index")</p>