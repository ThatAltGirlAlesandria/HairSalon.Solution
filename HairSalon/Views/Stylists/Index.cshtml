@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div>
  <h1>Stylists:</h1>
  
  @if(@Model.Count == 0)
  {
    <h3>You currently, don't have any stylist added to this database.</h3>
  }

  <ul>
    @foreach(Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new {id = stylist.StylistId})</li>
    }
  </ul>
</div>

<p>@Html.ActionLink("Add Stylist", "Create")</p>
<p>@Html.ActionLink("Add Client", "Create", "Clients")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Clients", "Index", "Clients")</p>
<p>@Html.ActionLink("Stylists", "Index", "Stylists")</p>
